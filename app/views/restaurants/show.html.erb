

<div class="container">
  <h2><%= link_to 'Restaurants', restaurants_path, class: "btn btn-primary" %></h2>

  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>
  <div class="container">
    <h2>Reviews</h2>
    <% @restaurant.reviews.each do |review| %>
      <p><%= review.content %></p>
      <p><%= "rating: #{review.rating}"  %></p>
    <% end %>
  </div>
  <%= link_to 'Back to restaurants', restaurants_path, class: "btn btn-primary" %>
  <%= link_to "Add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>

</div>
